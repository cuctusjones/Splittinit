<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:layout_marginTop="100dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:fillViewport="true">

            <ImageView
                android:id="@+id/person1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/person2"
                app:srcCompat="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/person1txt"
                android:layout_width="225dp"
                android:layout_height="50dp"
                android:layout_marginStart="45dp"
                android:layout_marginTop="35dp"
                android:text="First Name, Last Name"
                app:layout_constraintStart_toEndOf="@+id/person1"
                app:layout_constraintTop_toBottomOf="@+id/person2txt" />

            <ImageView
                android:id="@+id/person2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/person2txt"
                android:layout_width="225dp"
                android:layout_height="50dp"
                android:layout_marginStart="45dp"
                android:layout_marginTop="30dp"
                android:text="First Name, Last Name"
                app:layout_constraintStart_toEndOf="@+id/person2"
                app:layout_constraintTop_toTopOf="parent" />


        </android.support.constraint.ConstraintLayout>


    </ScrollView>
</LinearLayout>